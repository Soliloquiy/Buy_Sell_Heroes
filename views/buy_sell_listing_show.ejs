<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <title>Tweeter - Home Page</title>

    <!-- External CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" type="text/css" />

    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/nav.css">
    <link rel="stylesheet" href="/styles/new-tweet.css">
    <link rel="stylesheet" href="/styles/container.css">

    <!-- External JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/4.0.2/timeago.min.js" integrity="sha512-SVDh1zH5N9ChofSlNAK43lcNS7lWze6DTVx1JCXH1Tmno+0/1jMpdbR8YDgDUfcUrPp1xyE53G42GFrcM0CMVg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/client.js"></script>
    <script type='text/javascript' src='scripts/composer-char-counter.js'></script>

    <!-- Bungee/Source Sans Pro Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Bungee&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap" rel="stylesheet">

    <!-- Icons - AwesomeFont -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <!-- Viewport mobile default prevention -->
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0' />
  </head>

<!-- Body divided into: menu(nav), hero(header-nav), content(form), feature(articles), and footer -->
  <body>
    <main class="main">
      <!-- Top nav bar (fixed) -->
      <%- include('partials/_header') %>

      <!-- Page-specific (main) content here -->
      <main class="listings-page">



        <% if (categoryListings['active']) { %>

          <div class="listings-cover">
            <img src="<%= categoryListings['cover_photo_url'] %>" alt="coverphoto">
            <p>$<%= categoryListings['price'] %></p>
          </div>

            <section class="display-left">

              <section class="listing-container">
                  <div class="title-container">
                    <header>

                          <p><%= categoryListings['title'] %></p>
                        </div>
                      </header>

                      <p class="listing-text"><%= categoryListings['description'] %></p>
                      <div><%= categoryListings['country'] %></div>
            <div><%= categoryListings['city'] %></div>
            <div><%= categoryListings['province'] %></div>

                    <footer>
                      <div>
                      </div>
                      <div>
                      </div>
                    </footer>

                </section>
              </section>
              <% if (!user_id && categoryListings['seller_id'] === user_id) { %>


              </section>
              <div class="listing-buttons">
                <div class="listing-buttons">
                <form class="form-inline" action="/buy-sell/categories/<%= categoryListings['category_id'] %>/listings/<%= categoryListings['id'] %>" method="POST">
                  <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete?');">Delete</button>
                </form>
                </div>
            </div>

                <div class="listing-buttons">
                  <div class="listing-buttons">
                  <form class="form-inline" action="/buy-sell/categories/<%= categoryListings['category_id'] %>/listings/<%= categoryListings['id'] %>/edit" method="GET">
                    <button type="submit" class="btn btn-primary" name="<%= categoryListings['id']%>" >Mark Sold</button>
                  </form>
                  </div>
              </div>
              </section>
                <% } %>

                <% if (categoryListings['seller_id'] !== user_id) { %>
                  <div class="listing-buttons">
                    <div class="listing-buttons">
                    <form class="form-inline" action="/buy-sell/favorites" method="POST">
                      <button type="submit" class="btn btn-primary" name="<%= categoryListings['id']%>" >Add to Favorites</button>
                    </form>
                    </div>
                </div>
                <div class="listing-buttons">
                  <div class="listing-buttons">
                    <form class="form" method="POST" action="/buy-sell/views">
                      <textarea placeholder="Type your message here." name = "form" id="message" class="text-1"></textarea>
                      <br>
                      <div class = "submission-1">
                        <button id="submissionButton-1" class="messageButton-1" type="submit" name="requiredData" value=<%=`${seller_id_number},${user_id},${listingId}`%>>Send Message</button>
                      </div>
                    </form>
                  </div>
                </div>

                  <% } %>

      <% } else { %>

        <div class="listings-cover-sold">
          <p>SOLD</p>
        </div>

          <section class="display-left-sold-sold">


            <section class="listing-container">
                <div class="title-container">
                  <header>

                        <p><%= categoryListings['title'] %></p>
                      </div>
                    </header>

                    <p class="listing-text"><%= categoryListings['description'] %></p>

                  <footer>
                    <div>
                    </div>
                    <div>
                    </div>
                  </footer>

              </section>





        <% if (categoryListings['seller_id'] === user_id) { %>


        </section>
        <div class="listing-buttons">
          <div class="listing-buttons">
          <form class="form-inline" action="/buy-sell/categories/<%= categoryListings['category_id'] %>/listings/<%= categoryListings['id'] %>" method="POST">
            <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete?');">Delete</button>
          </form>
          </div>
      </div>

          <div class="listing-buttons">
            <div class="listing-buttons">
            <form class="form-inline" action="/buy-sell/categories/<%= categoryListings['category_id'] %>/listings/<%= categoryListings['id'] %>/edit" method="GET">
              <button type="submit" class="btn btn-primary" name="<%= categoryListings['id']%>" >Mark Sold</button>
            </form>
            </div>
        </div>
        </section>
          <% } %>
      <% } %>




        <section class="section footer"></section>

      </main>
    </main>
  </body>
</html>
